@model DSA_Assignment1_Sit1.Models.CommentModel

@{
    ViewBag.Title = "Post Comment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Post Comment</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<p style="color:Red">@ViewBag.Error</p>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>CommentModel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.commnet)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.commnet)
            @Html.ValidationMessageFor(model => model.commnet)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.rating)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.rating)
            @Html.ValidationMessageFor(model => model.rating)
        </div>

        @Html.HiddenFor(model => model.ProductID)
        <p>
            <input type="submit" value="Post Comment and Rating" />
        </p>
    </fieldset>
}

