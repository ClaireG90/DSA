<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src= "@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
</head>
<body style="background:#242222">
    <div class="page" style="background:#242222">
        <div id="header" style="background:#242222">
            <div id="title">
                <h1>Electros Ltd.</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
            @if (Context.User.IsInRole("User") && Context.User.IsInRole("Administrator"))
            {
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Products", "Index", "ViewAllProduct")</li>
                    <li>@Html.ActionLink("Cart", "Index", "ShoppingCart")</li>
                    <li>@Html.ActionLink("Faults", "Index", "GenerateFault")</li>
                    <li>@Html.ActionLink("Manage Faults", "Index", "UpdateFaultStatus")</li>
                    <li>@Html.ActionLink("Statistics", "Index", "Statistics")</li>
                </ul>
            }
            else if(Context.User.IsInRole("Administrator"))
            {
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Products", "Index", "ViewAllProduct")</li>
                    <li>@Html.ActionLink("Cart", "Index", "ShoppingCart")</li>
                    <li>@Html.ActionLink("Faults", "Index", "GenerateFault")</li>
                    <li>@Html.ActionLink("Manage Faults", "Index", "UpdateFaultStatus")</li>
                    <li>@Html.ActionLink("Statistics", "Index", "Statistics")</li>
                </ul>
            }
            else if (Context.User.IsInRole("User"))
            {
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Products", "Index", "ViewAllProduct")</li>
                    <li>@Html.ActionLink("Cart", "Index", "ShoppingCart")</li>
                    <li>@Html.ActionLink("Faults", "Index", "GenerateFault")</li>
                </ul>
            }
            else
            {
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Register", "CreateUser", "Registration")</li>
                </ul>
            }
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
